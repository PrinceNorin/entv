<div class="col-sm-6 col-sm-offset-3 form-wrapper">
  <h2><%= title %></h2>

  <ol class="breadcrumb">
    <li><%= link_to "Back", admin_categories_path %></li>
    <li class="active"><%= @category.new_record? ? "New" : "Edit" %></li>
  </ol>

  <%= render "share/error_messages", errors: @category.errors %>

  <%= form_for [:admin, @category], html: { class: "form" } do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.submit class: "btn btn-primary form-control" %>
    </div>
  <% end %>
</div>