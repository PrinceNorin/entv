<tr id="<%= order.id %>">
  <td><%= order.id %></td>
  <td><%= order.user.username %></td>
  <td><%= number_to_currency order.total, unit: "$" %></td>
  <td><%= order.order_date %></td>
  <td><%= order.deliver_date %></td>
  <td><%= order.status %></td>
  <td><%= link_to "Show", [:admin, order] %></td>
  <td>
    <%= form_for [:admin, order], remote: true, html: { class: "form" } do |f| %>
        <%= f.select :status, ["Pending", "Delivering", "Delivered", "Cancel"].collect { |item| [item, item] }, {}, { class: "select" } %>
        <%= f.submit "Update", class: "btn btn-default btn-xs", style: "width: 46%;" %>
    <% end %>
  </td>
</tr>