<div class="col-sm-6 col-sm-offset-3 form-wrapper">
  <h2>Importing Products</h2>

  <% @import.errors.full_messages.each do |msg| %>
    <p><%= msg %></p>
  <% end %>

  <%= form_for [:admin, @import], html: { class: "form" } do |f| %>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= link_to_add_fields "New Import Product", f, :import_products %>
    </div>

    <div class="form-group">
      <%= f.submit "Import", class: "btn btn-primary form-control" %>
    </div>
  <% end %>
</div>