<div class="form-wrapper product">
  <% unless @products.blank? %>
    <h2><%= @products[0].company %></h2>
  <% else %>
    <h2>No result was found!</h2>
  <% end %>
</div>
<ul id="index">
  <% @products.each do |p| %>
    <h3><%= link_to(p.name, product_path(p)) %></h3>
    <h4><%=pluralize(p.total, "Item")%> in Stock</h4>
    <h4><%= number_to_currency(p.price)%> each</h4>
  <% end %>
</ul> 